<br><br>
<h2 class="ui header">Search Authors</h2>

<form action="/authors" class="ui form" method="GET" >
    <div class="field">
        <label for="name">Name</label>
        <input type="text" name="name" id="name" value="<%= searchOption.name %>">
    </div>
    <button class="ui blue button" type="submit">Search</button>
</form>


<% if(authors){ %>
<table class="ui green table">
    <thead>
        <th>Author Name</th>
        <th>Action</th>
    </thead>
    <tbody>
        <% authors.forEach(author=>{ %>
            <tr>
                <td><%= author.name %></td>
                <td>Action</td>
            </tr>
        <% }) %>
    </tbody>
</table>
<% } %>